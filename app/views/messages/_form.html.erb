    <div class="panel panel-default">
        
        <div class="panel panel-body">
          入力箇所
        </div>
        
        <div class="panel-body">
          <%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
            
        　  <div class="form-group">
              <label for="inputName" class="col-md-1 control-label">名前</label>
              <div class="col-md-10">
                  <%= f.text_area :name, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
                <label for="inputcontents" class="col-md-1 control-label">内容</label>
                <div class="col-md-10">
                  <%= f.text_area :body, size: "50x10", class: "form-control", placeholder: "内容記載" %>
                </div>
            </div>


            <div class="form-group">
              <div class="col-sm-offset-1 col-sm-10">
                <%= f.submit "登録する", class: "btn btn-default btn-success btn-block" %>
                <% end %>
              </div>
            </div>
          </form>
        </div>    
          

    </div>
