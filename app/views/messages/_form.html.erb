    <div class="panel panel-default">
        
        <div class="panel panel-body">
          入力箇所
        </div>
        
        <div class="panel-body">
          <%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
            
              <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
            
        　  <div class="form-group">
              <label for="message_name" class="col-md-1 control-label">名前</label>
              <div class="col-md-10">
                  <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
                <label for="message_body" class="col-md-1 control-label">内容</label>
                <div class="col-md-10">
                  <%= f.text_area :body, size: "50x10", class: "form-control", placeholder: "内容記載" %>
                </div>
            </div>


            <div class="form-group">
              <div class="col-sm-offset-1 col-sm-10">
                <%= f.submit "登録する", class: "btn btn-default btn-success btn-block" %>
                <% end %>
              </div>
            </div>
          </form>
        </div>    
          

    </div>
