<div class="panel panel-default">
    <div class ="panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br>
        <% end %>
    </div>
</div>

    <div class="panel panel-default">
        
        <div class="panel panel-body">
          入力箇所
        </div>
        
        <div class="panel-body">
          <%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
            
        　  <div class="form-group">
              <label for="inputName" class="col-md-1 control-label">名前</label>
              <div class="col-md-10">
                  <%= f.text_field :name %>
              </div>
            </div>

            <div class="form-group">
                <label for="inputcontents" class="col-md-1 control-label">内容</label>
                <div class="col-md-10">
                  <%= f.text_field :body, cols: 40, rows: 100 %>
                </div>
            </div>


            <div class="form-group">
              <div class="col-sm-offset-2 col-md-1">
                <%= f.submit %>
                <% end %>
              </div>
            </div>
          </form>
        </div>    
          

    </div>


